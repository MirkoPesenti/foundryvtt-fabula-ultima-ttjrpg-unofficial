<li class="{{item.system.sourcebook}}">
	<div class="btn-container">
		{{#if @root.editable}}
			{{#unless (eq item.name 'Colpo Senz\'Armi')}}
				<button type="button" class="btn-action-options" data-item="{{item._id}}" data-tooltip="{{localize 'FU.actions.settings'}}">
					<i class="fa fa-ellipsis-vertical m-0"></i>
				</button>
			{{/unless}}
		{{/if}}
	</div>
	<div class="item-box">
		<div class="item-box-data">
			{{#if @root.editable}}
				<button type="button" class="btn-action-showchat js_showItemInChat" data-itemid="{{item._id}}" data-tooltip="{{localize 'FU.actions.showInChat'}}">
					<i class="fa fa-comment m-0"></i>
				</button>
				<button type="button" class="btn-action-roll name js_rollActorItem" data-itemid="{{item._id}}" data-primary="{{item.system.precisionAttributes.primary.value}}" data-secondary="{{item.system.precisionAttributes.secondary.value}}" data-tooltip="{{localize 'FU.actions.attack'}}">
					{{item.name}}
					{{#if item.system.isMartial.value}}
						<div class="martial-icon" data-tooltip="{{localize 'TYPES.Item.martialItem'}}">l</div>
					{{/if}}
					<div class="icon icon-{{item.system.range}}" data-tooltip="{{localize (concat 'FU.WeaponRanges.' item.system.range)}}"></div>
				</button>
			{{else}}
				
			{{item.name}}
			<div class="icon icon-{{item.system.range}}" data-tooltip="{{localize (concat 'FU.WeaponRanges.' item.system.range)}}"></div>
				
			{{/if}}
			<strong>
				【{{localize (concat 'FU.attributesAbbr.' item.system.precisionAttributes.primary.value)}} + {{localize (concat 'FU.attributesAbbr.' item.system.precisionAttributes.secondary.value)}}】{{#gt (add item.system.precisionBonus actor.system.bonus.checks.attack) 0}}+{{/gt}}
				{{#unless (eq (add item.system.precisionBonus actor.system.bonus.checks.attack) 0)}}
					{{add item.system.precisionBonus actor.system.bonus.checks.attack}}
				{{/unless}}
			</strong>

			<div class="divider-decoration {{#if (eq (add item.system.precisionBonus actor.system.bonus.checks.attack) 0)}}ml-0{{/if}}"></div>

			<strong>【TM{{#gt (add item.system.damage.value actor.system.level.damageBonus actor.system.bonus.damage.base) 0}} + {{add item.system.damage.value actor.system.level.damageBonus actor.system.bonus.damage.base}}{{/gt}}】</strong>{{#unless (eq item.system.damage.type.value '')}}
			
			<div class="icon icon-{{item.system.damage.type.value}}" data-tooltip="{{localize (concat 'FU.DamageTypes.' item.system.damage.type.value)}}"></div>
			{{/unless}}
		</div>
		
		{{#unless (and (eq item.enrichedHtml.description '') (not item.system.type))}}
			<div class="item-box-description">
				<div class="weapon-category">
					{{#if item.system.type}}
						<strong>{{localize (concat 'FU.weaponCategories.' item.system.type)}}</strong>
						<div class="divider-decoration"></div>
					{{/if}}
					<div class="text">{{{item.enrichedHtml.description}}}</div>
				</div>
			</div>
		{{/unless}}
	</div>
</li>