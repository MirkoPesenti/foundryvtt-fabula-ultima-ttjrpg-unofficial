<p>
    <strong>Tecnologie:</strong>
    {{#unless (eq (arrayLength flags.fabula.technologies) 3)}}
        <button type="button" class="js_addSkillType" data-type="technologies">
            <i class="fa fa-plus"></i>
        </button>
    {{/unless}}
</p>
{{#each flags.fabula.technologies as |technology technologyIndex|}}
    <div style="margin-right:20px;display:inline-block;">
        <button type="button" class="js_rollTechnology" data-type="{{technology}}">
            {{localize (concat 'FU.technologies.' technology)}}
        </button>
        <button type="button" class="js_removeSkillType" data-skill="technologies" data-type="{{technology}}">
            <i class="fa fa-trash"></i>
        </button>
    </div>
{{/each}}